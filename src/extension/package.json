{
  "name": "immorterm-name-sync",
  "displayName": "ImmorTerm Name Sync",
  "description": "Syncs VS Code terminal tab names to restore-terminals.json for ImmorTerm persistence",
  "version": "1.0.0",
  "publisher": "local",
  "repository": {
    "type": "git",
    "url": "https://github.com/lonormaly/ImmorTerm.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "immorterm.syncNow",
        "title": "ImmorTerm: Sync Terminal Names"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  }
}
